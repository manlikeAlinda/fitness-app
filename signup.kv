#:kivy 2.0.0
#:import dp kivy.metrics.dp
#:import utils kivy.utils

<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('FAF6F0')  # Light creamy background color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: dp(24)
            spacing: dp(15)

            Widget:
                size_hint_y: None
                height: dp(150)
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('F4EAE0')  # Creamy orange for the top wave
                    RoundedRectangle:
                        size: self.width - dp(48), dp(150)
                        pos: self.x + dp(24), self.y
                        radius: [dp(60), dp(60), 0, 0]

            Label:
                text: 'Signup'
                size_hint_y: None
                height: self.texture_size[1]
                font_size: '24sp'
                bold: True
                color: utils.get_color_from_hex('000000')  # Black color for text

            Label:
                text: 'Please signup to continue'
                size_hint_y: None
                height: self.texture_size[1]
                font_size: '16sp'
                color: utils.get_color_from_hex('000000')  # Black color for text

            TextInput:
                id: username_input
                size_hint_y: None
                height: dp(48)
                hint_text: 'Full name'
                multiline: False
                padding: [dp(16), dp(12), dp(16), dp(12)]
                background_color: 0, 0, 0, 0
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('000000')  # Black color for text
                    Line:
                        width: 1.5
                        rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)
                

            TextInput:
                id: email_input
                size_hint_y: None
                height: dp(48)
                hint_text: 'Email'
                multiline: False
                padding: [dp(16), dp(12), dp(16), dp(12)]
                background_color: 0, 0, 0, 0
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('000000')  # Black color for text
                    Line:
                        width: 1.5
                        rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)
                

            TextInput:
                id: password_input
                size_hint_y: None
                height: dp(48)
                hint_text: 'Create new password'
                multiline: False
                padding: [dp(16), dp(12), dp(16), dp(12)]
                background_color: 0, 0, 0, 0
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('000000')  # Black color for text
                    Line:
                        width: 1.5
                        rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)
                
                password: True

            Button:
                text: 'Signup'
                size_hint_y: None
                height: dp(48)
                background_normal: ''
                background_color: utils.get_color_from_hex('000000')  # Black for the button background
                color: utils.get_color_from_hex('FAF6F0')  # Light creamy text color
                font_size: '18sp'
                on_release: root.save_data()

            Button:
                text: 'Already have an account? Sign in'
                size_hint_y: None
                height: dp(48)
                background_normal: ''
                background_color: utils.get_color_from_hex('000000')  # Black for the button background
                color: utils.get_color_from_hex('FAF6F0')  # Light creamy text color
                font_size: '18sp'
                on_release: app.root.current = 'login'

            # Success/Error message label
            Label:
                id: success_label
                size_hint_y: None
                height: dp(30)
                text: ''  # Start with no text
                color: utils.get_color_from_hex('A7D397')  # Black color for text
                halign: 'center'  # Align the text to the center
                font_size: '18sp'